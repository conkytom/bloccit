<h1>New Advertisement</h1>

<div class="row">
    <div class="col-md-4">
        <p>Create an advertisement</p>
        <ul>
            <li>Make it eyepopping</li>
            <li>Make it catchy</li>
            <li>Try to be edgy but don't offend anyone</li>
        </ul>
    </div>
    <div class="col-md-8">
        <%= form_for @advertisement do |ad| %>
            <div class="form-group">
                <%= ad.label :title %>
                <%= ad.text_field :title, class: 'form-control', placeholder: "What's the title for your ad" %>
            </div>
            <div class="form-group">
                <%= ad.label :copy %>
                <%= ad.text_area :copy, rows: 6, class: 'form-control', placeholder: "Describe the product" %>
            </div>
            <div class="form-group">
                <%= ad.label :price %>
                <%= ad.text_field :price, class: 'form-control', placeholder: "in USD" %>
            </div>
            <div class="form-group">
                <%= ad.submit "Save", class: 'btn btn-sucess' %>
            </div>
        <% end %>
    </div>
</div>
